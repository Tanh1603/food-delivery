{
  "uid": "food-delivery-api-prod-optimized",
  "title": "Food Delivery API - Observability Optimized",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "10s",
  "tags": ["production", "api", "observability"],
  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "interval",
        "type": "custom",
        "query": "30s,1m,2m,5m,10m",
        "current": { "text": "1m", "value": "1m" },
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "API Status",
      "targets": [
        {
          "expr": "up{job=\"api\"}",
          "refId": "A",
          "legendFormat": "{{server_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } }
            }
          ],
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "unit": "none"
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Active Requests (Total) Over Time",
      "targets": [
        {
          "expr": "sum(http_active_requests)",
          "refId": "A",
          "legendFormat": "Total Active Requests"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "requests" } },
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Request Rate (Total RPS) Over Time",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) or vector(0)",
          "refId": "A",
          "legendFormat": "Total RPS"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "req/s" } },
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Error Rate (%) Over Time",
      "targets": [
        {
          "expr": "(sum by(route) (rate(http_requests_total{status_code=~\"4..|5..\"}[1m])) / sum by(route) (rate(http_requests_total[1m])))*100",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "P95 & P99 Latency Over Time",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by(le) (rate(http_request_duration_ms_bucket[1m])))",
          "legendFormat": "P95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, sum by(le) (rate(http_request_duration_ms_bucket[1m])))",
          "legendFormat": "P99",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } },
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 6 }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Active Requests & RPS by Instance",
      "targets": [
        {
          "expr": "http_active_requests",
          "legendFormat": "{{server_id}} Active Requests",
          "refId": "A"
        },
        {
          "expr": "sum by(server_id) (rate(http_requests_total[1m]))",
          "legendFormat": "{{server_id}} RPS",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "requests" } },
      "gridPos": { "x": 0, "y": 18, "w": 24, "h": 6 }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Errors by Instance",
      "targets": [
        {
          "expr": "sum by(server_id, status_code) (rate(http_requests_total[1m]))",
          "legendFormat": "{{server_id}} ({{status_code}})",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "count" } },
      "gridPos": { "x": 0, "y": 24, "w": 24, "h": 6 }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "CPU & Memory Usage per Instance",
      "targets": [
        {
          "expr": "avg by(server_id) (cpu_usage_percent)",
          "legendFormat": "{{server_id}} CPU %",
          "refId": "A"
        },
        {
          "expr": "avg by(server_id) (memory_usage_bytes / 1024 / 1024)",
          "legendFormat": "{{server_id}} Memory MB",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } },
      "gridPos": { "x": 0, "y": 30, "w": 24, "h": 6 }
    }
  ]
}
